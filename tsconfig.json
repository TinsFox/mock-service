{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": [
      "vitest/globals",
      "node",
      "@cloudflare/vitest-pool-workers",
      "@cloudflare/workers-types/2023-07-01"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "prisma/schema.prisma", "./script.ts"]
}
